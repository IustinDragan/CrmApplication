@page "/agentRespons-requestsPage"
@using CRMRealEstate.UI.Models
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Răspunde la cererea clientului</MudText>
        <MudTextField @bind-Value="AgentMessage" Label="Mesaj către client" Lines="4" FullWidth="true" TextArea="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Trimite</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Anulează</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public int RequestId { get; set; }
    public string AgentMessage { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(AgentMessage));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
